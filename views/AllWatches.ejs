<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Watches</title>
    <link rel="stylesheet" href="/stylesheets/allWatches.css">
    <link rel="stylesheet" href="/stylesheets/nav.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.css" />
</head>
<body>
    

    <%- include('partials/header') %>
    <div id="allWatchesBanner">
        <div class="allWatchBannerContnet">
            <span>WATCHES</span>
            <p>ALL WATCHES</p>
        </div>
    </div>
    
    <div id="allWatches">
            <p class="allWatches-title">ALL WATCHES</p>
            <div class="allWatcheswrapper">
                <% allProducts.forEach(function(allProduct){ %>
                    <div class="item">
                        <a href="/products/productDetail/<%= allProduct._id %>">
                            <div class="image">
                                <img src="/uploads/<%= allProduct.mainImage %>" alt="" class="main-item-image">
                                <img src="/uploads/<%= allProduct.zoomImage %>" alt="" class="zoom-item-image">
                            </div>
                        </a>
                        <div class="itme-con">
                            <span class="item-name"><%= allProduct.name %></span>
                            <span class="item-price">USD <%= allProduct.price %></span>
                            <a href="/products/productDetail/<%= allProduct._id %>">
                                DISCOVER <i class="ri-arrow-right-s-fill"></i>
                            </a>
                        </div>
                    </div>
               <% }) %>
            </div>
        </div>

    <%- include('partials/footer') %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <script src="/javascripts/nav.js"></script>
</body>
</html>